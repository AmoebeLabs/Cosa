# @section Description
# Build all variants. Uses the CosaBlink example sketch as sandbox 
# for this regression test script.
#
# This file is part of the Arduino Che Cosa project.

variants=`grep build.variant ../boards.txt | cut -d. -f1`
pushd ../examples/Blink/CosaBlink
for board in $variants
do
  echo $board
  cosa $board &> LOG
  cosa $board clean &>> LOG
  egrep "(warning|error)" LOG
done
rm LOG
popd

